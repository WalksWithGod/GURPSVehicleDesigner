	Public Sub GetMatrixIndex()
		Dim i As Short
		If mvarDatatype = 0 Then Exit Sub
		mvarMatrixPos = 0 'init the counter
		For i = 1 To UBound(ManeuverControlMatrix)
			If ManeuverControlMatrix(i).ID = mvarDatatype Then
				If ManeuverControlMatrix(i).TL >= mvarTL Then
					mvarMatrixPos = i
					Exit For
				Else
					mvarMatrixPos = i
				End If
			End If
		Next 
	End Sub
	
	
	Public Sub StatsUpdate()
		mvarZZInit = 1
		'If mvarMatrixPos = 0 Then Exit Sub 'NOTE: this is commented out because im  not using table for this after all
		Dim TempCost As Single
		Dim sPrint1 As String
		
		mvarWeight = 0
		mvarVolume = 0
		mvarCost = 0
		
		mvarLocation = GetLocation
		
		Select Case mvarDatatype
			
			Case PrimitiveManeuverControl
				
			Case MechanicalManeuverControl, MechanicalDivingControl
				If mvarDuplicate Then
					'find the Cost of all Powered Propulsion Systems
					mvarWeight = 50
					mvarVolume = 1
					If mvarDatatype = MechanicalManeuverControl Then
						TempCost = GetTotalPropulsionCost * 0.01
						If TempCost < 100 Then TempCost = 100
						mvarCost = System.Math.Round(TempCost, 2)
					Else
						mvarCost = 100
					End If
				End If
				
			Case ElectronicManeuverControl, ElectronicDivingControl
				If mvarDuplicate Then
					mvarWeight = 50
					mvarVolume = 1
					If mvarDatatype = ElectronicManeuverControl Then
						mvarCost = System.Math.Round(GetOriginalManeuverControlCost(ElectronicManeuverControl) / 2, 2)
					Else
						If mvarTL >= 8 Then
							mvarCost = 500
						Else
							mvarCost = 5000
						End If
					End If
				Else
					If TL >= 8 Then
						mvarCost = 500
					Else
						TempCost = GetTotalPropulsionCost * 0.1
						If TempCost < 500 Then TempCost = 5000
						mvarCost = System.Math.Round(TempCost, 2)
					End If
				End If
			Case ComputerizedManeuverControl, ComputerizedDivingControl
				If mvarDuplicate Then
					mvarWeight = 25
					mvarVolume = 0.5
					If mvarDatatype = ComputerizedManeuverControl Then
						mvarCost = GetOriginalManeuverControlCost(ComputerizedManeuverControl) / 2
					Else
						If mvarTL >= 8 Then
							mvarCost = 1000
						Else
							mvarCost = 10000
						End If
					End If
				Else
					If TL >= 8 Then
						'UPGRADE_WARNING: Couldn't resolve default property of object Veh.Options. Click for more: 'ms-help://MS.VSCC.v80/dv_commoner/local/redirect.htm?keyword="6A50421D-15FE-4896-8A1B-2EC21E9037B2"'
						If Veh.Options.BattleSuit <> "none" Then
							mvarCost = 0
						Else
							mvarCost = 1000
						End If
					Else
						TempCost = GetTotalPropulsionCost * 0.2
						If TempCost < 10000 Then TempCost = 10000
						mvarCost = System.Math.Round(TempCost, 2)
					End If
				End If
		End Select
		
		'print output
		If mvarDuplicate Then sPrint1 = "duplicate"
		mvarPrintOutput = "TL" & mvarTL & " " & sPrint1 & " " & mvarCustomDescription & "" & " (" & VB6.Format(mvarWeight, p_sFormat) & " lbs., " & VB6.Format(mvarVolume, p_sFormat) & " cf., " & "$" & VB6.Format(mvarCost, p_sFormat) & ")." & mvarComment
		
	End Sub
	
	
	
